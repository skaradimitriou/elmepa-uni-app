<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="actionBarStyle">@style/elmepaActionBar</item>
    </style>

    <style name="elmepaActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/blue_petrol</item>
    </style>

    <style name="elmepa_recycler">
        <item name="android:paddingBottom">@dimen/dimen_40</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="elmepaFabBtn" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="elmepa_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/margin_10</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
    </style>

    <!-- Holder Styles -->
    <style name="holder_programmes_style">
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
    </style>


    <!-- Text Styles -->
    <style name="text_20_white_bold" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_18_bold_black" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_18_bold_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_18_non_bold_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="text_16_black" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="text_16_non_bold_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="text_16_non_bold_black" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="text_16_bold_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_16_bold_petrol" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/blue_petrol</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_14_bold_grey" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/grey_darker</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
