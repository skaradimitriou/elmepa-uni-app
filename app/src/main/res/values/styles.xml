<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <!-- Holder Styles -->
    <style name="holder_programmes_style">
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
    </style>


    <!-- Text Styles -->
    <style name="text_20_white_bold" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_18_bold_black" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_18_bold_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_18_non_bold_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="text_16_black" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="text_16_non_bold_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="text_16_bold_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
