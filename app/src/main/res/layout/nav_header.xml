<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/agios_nikolaos"
        app:layout_constraintBottom_toBottomOf="@id/nav_header_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="@id/nav_header_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nav_header_elmepa_logo"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_70"
        android:layout_margin="@dimen/dimen_16"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/elmepa_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nav_header_title"
        style="@style/text_16_bold_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_16"
        android:text="@string/dashboard_elmepa"
        app:layout_constraintStart_toStartOf="@id/nav_header_elmepa_logo"
        app:layout_constraintTop_toBottomOf="@id/nav_header_elmepa_logo" />

    <TextView
        android:id="@+id/nav_header_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_16"
        android:text="@string/dashboard_det"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/nav_header_elmepa_logo"
        app:layout_constraintTop_toBottomOf="@id/nav_header_title" />

</androidx.constraintlayout.widget.ConstraintLayout>