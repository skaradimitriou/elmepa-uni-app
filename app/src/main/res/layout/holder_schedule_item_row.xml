<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_120"
    app:cardCornerRadius="@dimen/margin_15">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/schedule_img"
            android:layout_width="@dimen/height_130"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:scaleType="fitXY"
            android:src="@drawable/calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/schedule_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"
            android:text="@string/student_schedule"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/schedule_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/schedule_card_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dark_orange"
            android:padding="@dimen/margin_15"
            android:text="@string/student_schedule_btn"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/schedule_header"
            app:layout_constraintTop_toBottomOf="@id/schedule_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>