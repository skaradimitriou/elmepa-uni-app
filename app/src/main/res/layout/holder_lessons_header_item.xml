<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="lessonHeader"
            type="com.stathis.elmepaunivapp.ui.syllabus_lessons.model.LessonHeader" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/lessons_header_img"
                android:layout_width="@dimen/margin_45"
                android:layout_height="@dimen/margin_45"
                android:layout_margin="@dimen/margin_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/info_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/syllabus_lessons_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                android:text="@{lessonHeader.title}"
                tools:text="@string/all_lessons_mandatory"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/lessons_header_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/lessons_header_img"
                app:layout_constraintTop_toTopOf="@id/lessons_header_img" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>